exec = ~/.config/polybar/polybar-scripts/playerctl-status -s
format-underline = ${colors.yellow}

[module/playerctlplaying]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/playerctl-status
interval = 1
label = "%output% "
format-underline = ${colors.yellow}

